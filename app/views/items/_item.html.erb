<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <%= item.body%>

  <br />

  <%= link_to image_tag(item.image_as_thumbnail), item.image%>
  <hr />

  <% item.pictures.each do |picture|%>
    <%= link_to image_tag(picture), picture%>
  <%end%>

</div>
